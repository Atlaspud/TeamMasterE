package au.edu.jcu.mongohq;

import org.apache.http.HttpResponse;
import org.apache.http.client.HttpClient;
import org.apache.http.client.methods.HttpPost;
import org.apache.http.entity.StringEntity;
import org.apache.http.impl.client.DefaultHttpClient;

import android.os.AsyncTask;

public class SaveTeamsAsyncTask extends AsyncTask<Object, Void, Boolean> {

	@Override
	protected Boolean doInBackground(Object... param) {
		
		Team team = (Team) param[0];
		
		try {	
			TeamQueryBuilder qb = new TeamQueryBuilder();						
			
			HttpClient httpClient = new DefaultHttpClient();
	        HttpPost request = new HttpPost(qb.buildContactsSaveURL());
	        
//	        StringEntity params =new StringEntity(qb.createTeam(name[0]));
	        StringEntity params =new StringEntity(qb.createTeam(team));
	        request.addHeader("content-type", "application/json");
	        request.setEntity(params);
	        HttpResponse response = httpClient.execute(request);
	        
	        if(response.getStatusLine().getStatusCode()<205)
	        {
	        	return true;
	        }
	        else
	        {
	        	return false;
	        }
		} catch (Exception e) {
			//e.getCause();
			String val = e.getMessage();
			String val2 = val;
			return false;
		}		
	}

}
