<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context="au.edu.jcu.bowlinggame.MainActivity"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/scoresheet"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/cardBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/red_custom_button"
        android:text="Back"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/cardAddScoreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cardBackBtn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_custom_button"
        android:text="Add Score"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/cardDoneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cardAddScoreBtn"
        android:layout_alignBottom="@+id/cardAddScoreBtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/red_custom_button"
        android:text="Done"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cardEnterScoreTxt"
        android:layout_alignBottom="@+id/cardEnterScoreTxt"
        android:layout_alignLeft="@+id/cardBackBtn"
        android:text="Enter Score:  "
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/cardEnterScoreTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/back"
        android:ems="10"
        android:padding="5dp"
        tools:ignore="TextFields" />

</RelativeLayout>
